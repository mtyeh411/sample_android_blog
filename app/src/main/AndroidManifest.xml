<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weddingwire.wedblog" >

    <application
        android:name=".WBApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreatePostActivity"
            android:label="@string/title_activity_create_blog" >
        </activity>
        <activity
            android:name=".activities.ViewPostActivity"
            android:label="@string/title_activity_view_post" >
        </activity>
        <activity
            android:name=".activities.PostListActivity"
            android:label="@string/title_activity_post_list" >
        </activity>
    </application>

</manifest>
